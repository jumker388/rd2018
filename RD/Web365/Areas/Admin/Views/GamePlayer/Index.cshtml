@{
    ViewBag.Title = "Tra cứu tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section script{
    <script>
        var filterObject = {
            key: '',
            currentRecord: 0,
            numberRecord: 10,
            currentPage: 1,
            fDate: '',
            tDate: ''
        };
        
        $("#btnSearch").click(function () {
            filterObject.key = $('#txtKey').val();
            mApp.block("body", { overlayColor: "#000000", type: "loader", state: "success", message: "Please wait..." });
            
            $.get("/admin/GamePlayer/GetList",  filterObject , function (data) {
                $(".tblData").html(data);
            }).done(function () {
                mApp.unblock("body");
            });
        });
        
        $(".ulPaging a").on("click", function () {
            alert("click bound directly to #test-element");
        });
        
    </script>
}
