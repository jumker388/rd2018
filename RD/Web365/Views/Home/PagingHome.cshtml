@using System.Configuration
@using Web365Utility
@model string[]
@{
    var page = Convert.ToInt32(Model[0]);
    var total = Convert.ToInt32(Model[1]);
    var pagingCount = Convert.ToInt32(Math.Ceiling((total / (float)ConfigWeb.PageSizeNewsHome)));
}
@if (total > 0)
{
    <div class="nt-paging">
        <nav>
            <ul class="pagination">
                @if (page != 1)
                {
                    <li>
                        <a href="?page=1" title="" data-page="1" data-total="@total">«</a>
                    </li>
                }

                @for (var j = page - 2; j <= page + 2; j++)
                {
                    if (j <= 0 || j > pagingCount)
                    {
                        continue;
                    }
                    if (j == page)
                    {
                        <li class="active"><a href="javascript:;" data-page="@j" data-total="@total" title="">@j</a></li>
                    }
                    else
                    {
                        <li><a href="?page=@j" data-page="@j" data-total="@total" title="">@j</a></li>
                    }
                }
                @if (page != pagingCount)
                {
                    <li><a href="?page=@pagingCount" data-page="@pagingCount" data-total="@total" title="">»</a></li>
                }
            </ul>
        </nav>
    </div>
}